{% extends '::base.html.twig' %}

{% block title %}{{ 'quiz.users.title'|trans }}{% endblock %}

{% block header %}
<h1>{{ 'quiz.users.title'|trans }} <small>{{ 'quiz.users.title.comment'|trans }}</small></h1>
{% endblock %}

{% block body %}
  <h3>{{ 'quiz.users.list.title'|trans }}</h3>
  <form action="" method="get">
    <ul>
    {% for user in users %}
      <li>
        <input type="checkbox" name="user{{ user.id }}" value="1">&nbsp;&nbsp;
        {{ user.username }}
      </li>
    {% endfor %}
    </ul>
  </form>
{% endblock %}