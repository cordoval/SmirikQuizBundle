{% extends '::base.html.twig' %}

{% block title %}{{ 'quiz.question.page_title'|trans }}{% endblock %}

{% block header %}
<h1>{{ 'quiz.question.page_title'|trans }} <small>{{ 'quiz.question.title.comment'|trans }}</small></h1>
{% endblock %}

{% block body %}

<h3>{{ question.text }}</h3>

<form method="post" action="">
  {% for answer in question.answers %}
  <input type="radio" name="answer" value="{{ answer.id }}"> {{ answer.title }}<br />
  {% endfor %}
</form>

{% if number > 0 %}
  <a href="{{ path('quiz_go', {'uq_id': user_quiz.id, 'number': 0 }) }}" class="btn">{{ 'quiz.question.previous'|trans }}</a>
{% endif %}
{% if number < total %}
  <a href="{{ path('quiz_go', {'uq_id': user_quiz.id, 'number': 0 }) }}" class="btn">{{ 'quiz.question.next'|trans }}</a>
{% endif %}

{% endblock %}